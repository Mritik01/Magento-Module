<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
<body>
<referenceBlock name="footer_links">
    <block class="Magento\Framework\View\Element\Html\Link\Current" ifconfig="thecoachsmb/general/enable" name="custom-footer-link">
    <arguments>
    <argument name="label" xsi:type="string">Form Link</argument>
    <argument name="path" xsi:type="string">redmi/control/test</argument>
    </arguments>
    </block>
</referenceBlock>
</body>
</page>

